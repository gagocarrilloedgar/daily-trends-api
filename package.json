{
  "name": "daily-trends-api",
  "version": "1.0.0",
  "description": "Daily trends api",
  "repository": {
    "url": "https://github.com/gagocarrilloedgar/daily-trends-api"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.1.0",
    "npm": ">=7.11.2"
  },
  "scripts": {
    "dev": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules  ./src/app/start.ts",
    "lint": "tslint src/**/*.ts{,x}",
    "start:": "NODE_ENV=production node dist/src/app/start",
    "build": "yarn build:clean && yarn build:tsc",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:clean": "rm -r dist; exit 0",
    "test:int": "jest --testPathPattern=tests/app",
    "test:int:cov": "jest --coverage --testPathPattern=tests/app",
    "test": "jest"
  },
  "dependencies": {
    "@types/compression": "^1.7.0",
    "@types/errorhandler": "1.5.0",
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/helmet": "0.0.48",
    "body-parser": "^1.19.0",
    "bodybuilder": "^2.4.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-promise-router": "^4.0.1",
    "express-validator": "^6.10.0",
    "glob": "^7.1.6",
    "helmet": "^4.4.1",
    "http-status": "^1.5.0",
    "nunjucks": "^3.2.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.2.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/connect-flash": "0.0.36",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.42",
    "@types/faker": "^5.1.7",
    "@types/jest": "^29.4.1",
    "@types/node": "^14.14.34",
    "@types/nunjucks": "^3.1.4",
    "@types/supertest": "^2.0.12",
    "devmoji": "^2.3.0",
    "faker": "^5.4.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "10.5.4",
    "prettier": "^2.2.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "~1.18.0",
    "tslint-eslint-rules": "^5.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "tslint --fix"
    ]
  }
}
